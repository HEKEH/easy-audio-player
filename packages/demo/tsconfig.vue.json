{
  "extends": "../../tsconfig.json",
  "include": [
    "src/vue/**/*.vue",
    "src/vue/**/*.ts",
    "../player-vue/src/**/*.vue",
    "../player-vue/src/**/*.ts",
    "../shared/src/**/*.vue",
    "../shared/src/**/*.ts"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["./*"],
      "@hekeh/easy-audio-player-vue": ["../player-vue/src/index.ts"],
      "easy-audio-player-shared": ["../shared/src/index.ts"]
    }
  }
}
