{
  "name": "easy-audio-player",
  "version": "0.0.0",
  "description": "A simple audio player",
  "packageManager": "^pnpm@7.13.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/HEKEH/easy-audio-player"
  },
  "keywords": [
    "audio",
    "player",
    "web",
    "vue",
    "react"
  ],
  "scripts": {
    "dev": "cross-env ts-node scripts/dev-start.ts",
    "build": "cross-env turbo build --filter=!easy-audio-player-demo",
    "lint": "eslint",
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@tsconfig/node20": "^20.1.4",
    "@types/node": "^22.9.0",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "cross-env": "^7.0.3",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.14.1",
    "husky": "^8.0.0",
    "lint-staged": "^10.2.10",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.2",
    "turbo": "^2.1.3",
    "typescript": "^5.2.2",
    "vite": "^5.4.10",
    "vite-plugin-css-injected-by-js": "^3.5.2",
    "vite-plugin-dts": "^4.3.0"
  },
  "lint-staged": {
    "{packages,apps}/**/*.{js,ts,tsx}": [
      "eslint --fix --color"
    ]
  },
  "engines": {
    "node": ">= 14",
    "pnpm": ">= 6"
  }
}
